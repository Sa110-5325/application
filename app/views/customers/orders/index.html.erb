<% @orders.each do |order| %>
  <%= order.created_at.strftime('%Y年 %m月 %d日') %>
  <%= order.link_address %>
  <% order.ordered_items.each do |ordered_item| %>
    <%= ordered_item.item.name %>
    <%= (order.total_fee + order.delivery_fee).to_s(:delimited) %>
    <%= order.status %>
    <%= link_to "表示", order_path(order) %>
  <% end %>
<% end %>