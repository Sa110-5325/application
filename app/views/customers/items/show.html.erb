<div class="container">
  <div class="row">
    <div class="col-sm">
      商品詳細
    </div>
  </div>
  <div class="row justify-content-center mb-5">
    <div class="col-sm-5">
      <%= attachment_image_tag @item, :image, fallback: "no-image.jpg", size: "400x400" %>
    </div>
    <div class="col-sm-6">
      <table class="table">
        <tr><th>商品名</th><td><%= @item.name %></td></tr>
        <tr><th>商品説明</th><td><%= @item.info %></td></tr>
        <tr><th>数量</th>
          <td>
            <% if customer_signed_in? %>
              <%= form_with model: @carts do |f| %>
                <%= (@item.price * 1.1).floor %>円（税込）
                数量
                <%= f.number_field :quantity, min:1, max:10, value:1 %>個
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.submit "カートに追加" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
