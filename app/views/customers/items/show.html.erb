<%= attachment_image_tag @item, :image %>
商品名<%= @item.name %>
ジャンル<%= @item.genre.name %>
説明<%= @item.info %>
<% if customer_signed_in? %>
  <%= form_with model: @carts do |f| %>
    <%= (@item.price * 1.1).floor %>円（税込）
    数量
    <%= f.number_field :quantity, min:1, max:10, value:1 %>個
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.submit "カートに追加" %>
  <% end %>
<% end %>