<%= @customer.family_name %><%= @customer.first_name %>さんの会員情報
会員ID<%= @customer.id %>
<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  姓<%= f.text_field :family_name %>
  名<%= f.text_field :first_name %>
  セイ<%= f.text_field :family_name_kana %>
  メイ<%= f.text_field :first_name_kana %>
  メールアドレス<%= f.text_field :email %>
  電話番号<%= f.text_field :phone_number %>
  郵便番号<%= f.text_field :postal_code %>
  住所<%= f.text_field :address %>
  会員ステータス<%= f.radio_button :status, true %>有効<%= f.radio_button :status, false %>退会
  <%= f.submit :変更 %>
<% end %>