<div class="container">
  <div class="row">
    <div class="col-sm">
      <%= @customer.family_name %><%= @customer.first_name %>さんの詳細ページ
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%= attachment_image_tag @customer, :profile_image, fallback: "no-image.jpg", size: "350x350" %>
    </div>
    <div class="col-sm-7">
      <table class="table text-center">
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th>氏名</th><td><%= @customer.family_name %><%= @customer.first_name %></td></tr>
        <tr><th>フリガナ</th><td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td></tr>
        <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @customer.address %></td></tr>
        <tr><th>電話番号</th><td><%= @customer.phone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
      </table>
      <%= link_to "編集", edit_admin_customer_path(@customer) %>
    </div>
  </div>
</div>