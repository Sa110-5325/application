商品編集
<%= form_with model: @item, url: admin_item_path, local: true do |f| %>
  <%= f.label :画像 %>
  <%= f.attachment_field :image %>
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
  <%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <%= f.label :商品説明 %>
  <%= f.text_area :info %>
  <%= f.label :金額 %>
  <%= f.text_field :price %>円
  <%= f.label :販売状況 %>
  <%= f.radio_button :status, true %>
  <%= f.label :販売中 %>
  <%= f.radio_button :status, false %>
  <%= f.label :販売停止中 %>
  <%= f.submit "更新" %>
<% end %>