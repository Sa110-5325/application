<% @items.each do |item| %>
  <%= attachment_image_tag item, :image %>
  <%= link_to item.name, admin_item_path(item) %>
  <%= item.genre.name %>
  <%= item.info %>
  <%= item.price %>円
  <% if item.status == true %>
    販売中
  <% else %>
    販売停止中
  <% end %>
<% end %>
<%= link_to "商品登録する", new_admin_item_path %>