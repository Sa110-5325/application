<!DOCTYPE html>
<html>
  <head>
    <title>ECサイト（ブラウザ）</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <ul>
      <% if customer_signed_in? %>
        <li><%= link_to "アバウト", about_path %></li>
        <li><%= link_to "トップ", root_path %></li>
        <li><%= link_to "カート", carts_path %></li>
        <li><%= link_to "商品一覧", items_path %></li>
        <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "ログイン", new_customer_session_path %></li>
        <li><%= link_to "トップ", root_path %></li>
        <li><%= link_to "新規登録", new_customer_registration_path %></li>
      <% end %>
      <% if admin_signed_in? %>
        <li><%= link_to "管理者ジャンル一覧", admin_genres_path %></li>
        <li><%= link_to "管理者顧客一覧", admin_customers_path %></li>
        <li><%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %></li>
      <% end %>
    </ul>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
